<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="float-right">
        <form class="form-inline" action="/" method="get">
          <input class="form-control mr-sm-2" name="q" type="search" placeholder="Busca" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
          <i class="fa fa-search"></i>
          </button>
        </form>
      </div>
    </div>
    <div>
      <div class="card border-0">
        <div class="card-body">
          <div class="row">
            <% if @products.empty? %>
              <div class="col-md-12">
                <h1>Nemhum produto encontrado</h1>
              </div>
            <% else %>
              <% @products.each do |product| %>
                <div class="col-md-3">
                  <div class="card products" >
                    <img src="<%= product.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <span class="card-title"><%= product.name %></span><br>
                      <span><%= number_to_currency product.price, unit: "R$", separator: ",", delimiter: "." %></span> <br>
                      <%= link_to product.url do %>
                      <%= product.installments %> x de <%= (product.price / product.installments).round(2)%>
                    <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <% unless @products.empty? %>
          <div class="card-footer border-0 d-flex justify-content-center">
            <%= paginate @products %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

